@model IEnumerable<string>

<style>

    .btnForNav {
        background: white;
    }

    .btnForNavSelected {
        background: grey;
        color: white;
    }

</style>

@Html.ActionLink("Домой", "List", "Product", null,
    new { @class = "btn btn-block btn-default btn-lg btnForNav" })

@foreach (var link in Model)
{
    @Html.RouteLink(link, new
    {
        controller = "Product",
        action = "List",
        category = link,
        page = 1
    }, new
    {
        @class = "btn btn-block btn-default btn-lg btnForNav"
            + (link == ViewBag.SelectedCategory ? " btnForNavSelected" : "")
    })
}
