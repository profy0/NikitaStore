@model IEnumerable<string>

<style>
    .btnForNav {
        background: white;
        margin-bottom: 10px; /* Добавлен отступ снизу */
    }

    .btnForNavSelected {
        background: grey;
        color: white;
        margin-bottom: 10px; /* Добавлен отступ снизу */
    }
</style>

@Html.ActionLink("Все товары", "List", "Product", null,
    new { @class = "btn btn-block btn-outline-secondary btn-lg btnForNav" })

@foreach (var link in Model)
{
    @Html.RouteLink(link, new
    {
        controller = "Product",
        action = "List",
        category = link,
        page = 1
    }, new
    {
        @class = "btn btn-block btn-outline-secondary btn-lg btnForNav"
            + (link == ViewBag.SelectedCategory ? " btnForNavSelected" : "")
    })
}
